{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Callback",
  "description": "A sort of reminder used in the call centre",
  "type": "object",
  "properties": {
    "doc_type": "callback",
    "version": { "type": "string" },
    "callId": { "type": "string" },
    "reason": { "type": "string" },
    "author": {
      "username": { "type": "string" },
      "fullName": { "type": "string" }
    },
    "status": { "enum": ["pending", "rescheduled", "done"] },
    "createdOn": {
      "type": "string",
      "format": "date-time"
    },
    "scheduledAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "callId",
    "reason",
    "author",
    "status",
    "createdOn",
    "version",
    "scheduledAt"
  ]
}
